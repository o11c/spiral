# a tetrahedron, hand-drawn based on a cube

textures:
  ambient: data/earthlights1k.bmp
  diffuse: data/earthmap1k.bmp
  specular: data/earthspec1k.bmp

vertices:
  - position:   [-1, -1, -1, 1]
    texture:        [0, 0, 0, 1]
    normal:         [-1, -1, -1, 1]
  - position:   [-1, -1, 1, 1]
    texture:        [.5, 1, 0, 1]
    normal:         [-1, -1, 1, 1]

  - position:   [-1, 1, -1, 1]
    texture:        [.5, 0, 0, 1]
    normal:         [-1, 1, -1, 1]
  - position:   [-1, 1, 1, 1]
    texture:        [0, 1, 0, 1]
    normal:         [-1, 1, 1, 1]

  - position:   [1, -1, -1, 1]
    texture:        [.5, 0, 0, 1]
    normal:         [1, -1, -1, 1]
  - position:   [1, -1, 1, 1]
    texture:        [1, 1, 0, 1]
    normal:         [1, -1, 1, 1]

  - position:   [1, 1, -1, 1]
    texture:        [1, 0, 0, 1]
    normal:         [1, 1, -1, 1]
  - position:   [1, 1, 1, 1]
    texture:        [.5, 1, 0, 1]
    normal:         [1, 1, 1, 1]

faces:
    - [0, 5, 3]
    - [3, 5, 6]

    - [0, 3, 6]
    - [5, 0, 6]
