# a cube, hand-drawn
# to get the cube back, flip all the comments

textures:
  ambient: data/earthlights1k.bmp
  diffuse: data/earthmap1k.bmp
  specular: data/earthspec1k.bmp

vertices:
  - position:   [-1, -1, -1, 1]
    texture:        [0, 0, 0, 1]
    normal:         [-1, -1, -1, 1]
  - position:   [-1, -1, 1, 1]
    texture:        [0, 1, 0, 1]
    normal:         [-1, -1, 1, 1]

  - position:   [-1, 1, -1, 1]
    texture:        [.5, 0, 0, 1]
    normal:         [-1, 1, -1, 1]
  - position:   [-1, 1, 1, 1]
    texture:        [.5, 1, 0, 1]
    normal:         [-1, 1, 1, 1]

  - position:   [1, -1, -1, 1]
    texture:        [.5, 0, 0, 1]
    normal:         [1, -1, -1, 1]
  - position:   [1, -1, 1, 1]
    texture:        [.5, 1, 0, 1]
    normal:         [1, -1, 1, 1]

  - position:   [1, 1, -1, 1]
    texture:        [1, 0, 0, 1]
    normal:         [1, 1, -1, 1]
  - position:   [1, 1, 1, 1]
    texture:        [1, 1, 0, 1]
    normal:         [1, 1, 1, 1]

faces:
  - [2, 0, 3]
  - [3, 0, 1]

  - [2, 3, 6]
  - [6, 3, 7]

  - [4, 6, 5]
  - [5, 6, 7]

  - [4, 5, 0]
  - [0, 5, 1]


  - [2, 6, 0]
  - [0, 6, 4]

  - [1, 5, 3]
  - [3, 5, 7]
